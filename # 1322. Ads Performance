# 1322. Ads Performance

select ad_id, 
case
when Click + View = 0 then 0
else round(Click/(Click + View)*100,2)
end as ctr from
(
select ad_id, 
sum(case
when action = 'Clicked' then 1
else 0
end) as Click,
sum(case
when action = 'Viewed' then 1
else 0
end) as View from Ads
group by ad_id
) sub
order by ctr desc, ad_id asc;

