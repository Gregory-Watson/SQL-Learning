# 1303. Find the Team Size

#select employee_id, team_size from Employee a
#inner join (select team_id, count(team_id) as team_size from Employee group by team_id) as b
#on b.team_id  = a.team_id;

select a.employee_id, count(a.employee_id) as team_size from Employee a
inner join Employee b on a.team_id = b.team_id
group by a.employee_id;
